# Database
DATABASE_URL="postgresql://user:password@localhost:5432/seatjumper?schema=public"
# Connection pool size (reduce for memory efficiency)
DATABASE_CONNECTION_LIMIT=5

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Production Memory Configuration
NODE_OPTIONS="--max-old-space-size=3072"  # 3GB heap size (leaving 1GB for system)
NODE_ENV="production"

# Ticket Evolution API
TICKET_EVOLUTION_API_TOKEN="your-api-token"
TICKET_EVOLUTION_API_SECRET="your-api-secret"
TICKET_EVOLUTION_OFFICE_ID="your-office-id"
TICKET_EVOLUTION_ENV="sandbox" # or "production"

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""